<header class="page-header">
    {% include 'partials/site-branding.twig' %}

    {% if menu_socials.items %}
        <div class="socials">
            {% include 'partials/icon-menu-list.twig' with {'menu': menu_socials.items, 'color':'#000'} %}
        </div>
    {% endif %}

    {% if menu_primary_navigation.items %}
        <nav id="header-navigation" role="navigation">
            {% include 'partials/menu-list.twig' with {'menu': menu_primary_navigation.items} %}
        </nav>
        {% include 'partials/burger.twig' %}
    {% endif %}
    
</header>
